<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/txtRehabImg"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iconm1"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="400dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabName"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/titleBooking1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Treatment/Program Plan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabName"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment plan may be vary based on individual"
                        android:textColor="@color/theme"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provide detoxification, cognitive behavioral  therapy, rational emotive behavior therapy,  and contigency management.  "
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/titleBooking2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Choose a session"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabName"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerTreatmentPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/column_design"
                        android:textColor="@color/black"
                        android:padding="@dimen/hintPadding"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Price"
                        android:padding="@dimen/hintPadding"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/txtRehabPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/txtRehabDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/column_design"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="Select Date"
                        android:padding="@dimen/hintPadding"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/column_design"
                        android:text="Select Time"
                        android:padding="@dimen/hintPadding"                        android:textColor="@color/black"
                        android:textSize="@dimen/rehabdata" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/saveBtn"
                android:padding="@dimen/hintPadding"
                android:layout_width="@dimen/btnWidth"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="106dp"
                android:layout_marginBottom="49dp"
                android:background="@drawable/column_design"
                android:backgroundTint="@color/theme"
                android:text="Book Now"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/txtSize"/>



        </LinearLayout>


    <!--this the navigation view which draws and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navView"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>