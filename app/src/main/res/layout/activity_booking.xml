<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rehabImg"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            app:srcCompat="@drawable/iconm1"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/txtCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddress"
            android:textSize="@dimen/rehabdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtWebsite"
            android:textSize="@dimen/rehabdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtPhone"
            android:textSize="@dimen/rehabdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/titleBooking1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Treatment/Program Plan"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment plan may be vary based on individual"
            android:textColor="@color/theme"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide detoxification, cognitive behavioral  therapy, rational emotive behavior therapy,  and contigency management.  "
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/titleBooking2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Choose a session"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/rehabName" />

        <Spinner
            android:id="@+id/spinnerTreatmentPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"
            />

        <TextView
            android:id="@+id/txtRehabPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"/>

        <TextView
            android:id="@+id/txtRehabDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="@drawable/column_design"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Select Date"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata"/>

        <TextView
            android:id="@+id/txtTime"
            android:background="@drawable/column_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textColor="@color/black"
            android:textSize="@dimen/rehabdata" />

        <Button
            android:id="@+id/saveBtn"
            android:padding="@dimen/hintPadding"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="49dp"
            android:background="@drawable/column_design"
            android:backgroundTint="@color/theme"
            android:text="Book Now"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/txtSize"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

    <!--this the navigation view which draws and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navView"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
